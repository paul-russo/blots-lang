---
interface Props {
  href: string;
  external?: boolean;
}

const { href, external } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  class="underline transition-colors hover:text-purple-700 focus:text-purple-700 dark:hover:text-purple-400 dark:focus:text-purple-400"
  ><slot /></a
>
